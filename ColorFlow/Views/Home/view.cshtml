@model ColorFlow.Models.ImageData


@{
    ViewBag.Title = "Color Flow - Preview";
    int height, width;
    string base64 = Convert.ToBase64String(Model.Image);
    if(Model.Height > Model.Width)
    {
        height = 550;
        width = 425;
    }
    else 
    {
        height = 425;
        width = 550;
    }
}

@section scripts
{
    <script src="/JavaScript/view.js" type="text/javascript" ></script>
}

<style>
     .imageContainer { padding:20px; }
     .image { box-shadow:0 0 30px skyblue }
     td > .button { min-width:120px; }
</style>

<h2 id="h2-Intro">Image Preview (@(Model.Width)x@(Model.Height))</h2>
<table>
    <tr>
        <td><p id="btnGrayscale" class="button">Grayscale</p></td>
        <td><p id="btnSepiatone" class="button">Sepia Tone</p></td>
        <td><p id="btnInvert" class="button">Invert</p></td>
        <td><p id="btnDarkblue" class="button">Dark blue</p></td>
        <td><p id="btnMirror" class="button">Mirror</p></td>
        <td><img id="ajaxLoader" src="/Images/ajaxLoaderBlue.gif" height="50" width="50" /></td>
    </tr>
</table>
    

<table>
    <tr>
        <td class="imageContainer" ><img id="img" class="image" height="@height" width="@width" src="data:image/jpg;base64,@base64"  /></td>
        <td class="imageContainer" ><img id="imgFiltered" height="@height" width="@width"  /></td>
    </tr>
</table>
